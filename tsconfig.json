{
  "compilerOptions": {
    "target": "es5",  
    "module": "commonjs",
    "allowJs": true,                                  
    "jsx": "preserve",   
    "strict": true,                                   
    "noUnusedLocals": true,                           
    "noImplicitReturns": true,                        
    "baseUrl": "./src",                                  
    "paths": {
      "components/*":["./components/*"],
      "utils/*" :["./utils/*"],
      "hooks" : ["./hooks/*"],
    },                                      
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "skipLibCheck": true,           
    "resolveJsonModule": true,                
  },
  "include": ["src/**/*.tsx"],
  "exclude": ["node_modules"]
}
